{
  "name": "african-payment-gateway-sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for integrating African payment gateways (Paystack, Flutterwave) with comprehensive type safety and validation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "commonjs",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./utils/webhook": {
      "require": "./dist/utils/webhook.js",
      "types": "./dist/utils/webhook.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "docs": "typedoc --out docs/api src/index.ts",
    "test": "jest",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write 'src/**/*.ts' '*.{js,json,md}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weezykon/African-Payment-Gateway-SDK.git"
  },
  "keywords": [
    "paystack",
    "flutterwave",
    "payment",
    "gateway",
    "africa",
    "nigeria",
    "typescript",
    "sdk",
    "payments",
    "fintech"
  ],
  "author": "Akinbode Akinbode",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/weezykon/African-Payment-Gateway-SDK/issues"
  },
  "homepage": "https://github.com/weezykon/African-Payment-Gateway-SDK#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-plugin": "^7.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "decimal.js": "^10.6.0",
    "zod": "^4.1.12"
  }
}
